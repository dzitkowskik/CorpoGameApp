{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "WEB",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/CorpoGameApp/bin/Debug/netcoreapp2.0/CorpoGameApp.dll",
            "args": [],
            "cwd": "${workspaceRoot}/CorpoGameApp",
            "stopAtEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/CorpoGameApp/Views"
            }
        },
        {
            "name": "TEST",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/CorpoGameApp.Test/bin/Debug/netcoreapp2.0/CorpoGameApp.Test.dll",
            "args": [],
            "cwd": "${workspaceRoot}/CorpoGameApp.Test",
            "stopAtEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}