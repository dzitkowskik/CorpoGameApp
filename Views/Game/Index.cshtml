@model GameViewModel
@{
    bool showStatus = !string.IsNullOrEmpty(ViewData["StatusMessage"] as string);
    string statusMessage = (string)ViewData["StatusMessage"];
    string statusClass = (bool)ViewData["IsStatusError"] ? "text-danger" : "text-success";
}

<section id="intro" class="intro-section first-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Table Footbal Reservation Page</h1>
                <p><strong>Create a game to make a reservation of a table for 15 minutes</strong></p>
            </div>
        </div>
    </div>
</section>

@if(showStatus) {
    <section id="status" class="status-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p class="@statusClass">@statusMessage</p>
                </div>
            </div>
        </div>
    </section>
}

<section id="reservation" class="reservation-section">
    <div class="container">
        <div class="row">
            <div id="gameDiv" class="col-lg-12">
                @if(Model.IsAnyGameInProgress) {
                    @Html.Partial("Partial/CurrentGame.cshtml", Model.CurrentGame)
                } else {
                    @Html.Partial("Partial/NewGame.cshtml", Model.NewGame)
                }
            </div>
        </div>
    </div>
</section>

<section id="stats" class="default-section">
    <div class="row" style="width: 100%">
        <div class="col-lg-12">
            <div id="myCarousel" class="carousel slide">
                <div class="carousel-inner" role="listbox">
                    @foreach(var stat in Model.Statistics) {
                        <div class="item @(stat==Model.Statistics.First() ? "active" : "")">
                            <div class="intro-content text-center">
                                <h1>@stat.Name</h1>
                                <p>@stat.Description</p>
                                <table class="table table-bordered table-striped table-hover table-curved">
                                    <thead>
                                        <tr>
                                            @foreach(var header in stat.Headers) {
                                                <th class="text-center">@header</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var row in stat.Values) {
                                            <tr>
                                                @foreach(var col in row) {
                                                    <td>@col</td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    <!-- Controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="icon-prev"></span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="icon-next"></span>
                    </a>  
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        @for(var i = 0; i < Model.Statistics.Count(); i++) {
                            <li data-target="#myCarousel" data-slide-to="@i" @(i==0 ? "class=active" : "")></li>
                        }
                    </ol>
                </div>
                
            </div>
        </div>
    </div>
</section>

<section id="contact" class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Contact</h1>
                <p>Karol Dzitkowski</p> 
                <p>k.dzitkowski&#64;gmail.com</p>
                <p>Work time: 8am - 4pm</p>
            </div>
        </div>
    </div>
</section>