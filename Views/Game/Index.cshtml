@model NewGameViewModel

<section id="intro" class="intro-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Table Footbal Reservation Page</h1>
                <p><strong>Create a game to make a reservation of a table for 15 minutes</strong></p>
            </div>
        </div>
    </div>
</section>

<section id="reservation" class="reservation-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Create new game</h1>
                <table class="table">
                    <tr>
                        <th class="text-center"><h2>First team</h2></th>
                        <th></th>
                        <th class="text-center"><h2>Second team</h2></th>
                    </tr>
                    <tr>
                        <td class="text-center">
                            <select class="selectpicker input-lg" multiple>
                                <optgroup label="First Team" data-max-options="2">
                                @foreach(var player in Model.Players) {
                                    <option>@player.Name @player.Surname @player.Score</option>
                                }
                                </optgroup>
                            </select>
                        </td>
                        <td>
                            <button class="btn btn-default btn-lg btn-block btn-danger" type="button">CREATE</button>
                        </td>
                        <td class="text-center">
                            <select class="selectpicker input-lg" multiple>
                                <optgroup label="Second Team" data-max-options="2">
                                @foreach(var player in Model.Players) {
                                    <option>@player.Name @player.Surname @player.Score</option>
                                }
                                </optgroup>
                            </select>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>

<section id="player" class="player-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <img id="player_img" src="/images/lego_player.jpg" />
            </div>
            <div class="col-lg-8">
                <h1>Update Player Name</h1>
                </br>
                <form 
                asp-controller="Game" 
                asp-action="UpdatePlayer" 
                asp-route-returnurl="@ViewBag.ReturnUrl" 
                method="post" 
                class="form-horizontal"
                role="form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="NewPlayer.Name" class="col-sm-4 control-label"></label>
                        <div class="col-sm-4">
                            <input asp-for="NewPlayer.Name" class="form-control" />
                            <span asp-validation-for="NewPlayer.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="NewPlayer.Surname" class="col-sm-4 control-label"></label>
                        <div class="col-sm-4">
                            <input asp-for="NewPlayer.Surname" class="form-control" />
                            <span asp-validation-for="NewPlayer.Surname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input type="submit" value="Update" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<section id="contact" class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Contact</h1>
                <p>Karol Dzitkowski</p> 
                <p>k.dzitkowski&#64;gmail.com</p>
                <p>Work time: 8am - 4pm</p>
            </div>
        </div>
    </div>
</section>